<Control
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <BoxContainer Name="VBox" Orientation="Vertical">
        <controls:NanoHeading Name="Header" Text="{Loc 'lobby-character-preview-panel-header'}" />
        <BoxContainer Name="Loaded" Orientation="Vertical" Visible="False">
            <ScrollContainer VerticalExpand="True" HorizontalExpand="True" MinSize="0 100">
                <BoxContainer Name="JobList" Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True"/>
            </ScrollContainer>
            <controls:VSpacer/>
            <Button Name="CharacterSetup" Text="{Loc 'lobby-character-preview-panel-character-setup-button'}"
                    HorizontalAlignment="Center"
                    Margin="0 5 0 0"/>
        </BoxContainer>
        <Label Name="Unloaded" Text="{Loc 'lobby-character-preview-panel-unloaded-preferences-label'}"/>
    </BoxContainer>
</Control>
