<DefaultWindow xmlns="https://spacestation14.io"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
            Title="{Loc 'ship-labeler-ui-header'}">
    <BoxContainer Orientation="Vertical" SeparationOverride="4" MinWidth="150">
        <Label Name="CurrentTextLabel" Text="{Loc 'ship-labeler-header-label'}" />
        <LineEdit Name="NameEdit" />
        <controls:ConfirmButton Name="SubmitRenameButton" Text="{Loc ship-labeler-confirm-button}" ConfirmationText="{Loc 'ship-labeler-confirm-button-confirmation'}" Disabled="True"/>
        <Label Name="StatusLabel" Visible="False" />
    </BoxContainer>
</DefaultWindow>
